package ch1;
/*
 * switch(값) {
 * 	case value1: {
 * 		실행문;
 * 		break; // 이 키워드를 만나면 즉시 구문을 벗어남
 * 	}case value2: {
 * 		실행문;
 * 		break;
 * 	}
	default: {
 * 		실행문;
 * 	}
 * }
 */

public class Control3 {

	public static void main(String[] args) {
		int day = 1;
		switch (day) {
			case 0:{
				System.out.println("일요일 입니다.");
			}
			case 1:{
				System.out.println("월요일 입니다.");
			}
			case 2:{
				System.out.println("화요일 입니다.");
			}
			case 3:{
				System.out.println("요일 입니다.");
			}
			case 4:{
				System.out.println("일요일 입니다.");
			}
			case 5:{
				System.out.println("일요일 입니다.");
			}
			case 6:{
				System.out.println("일요일 입니다.");
			}
			default:{
				System.out.println("일요일 입니다.");
			}
		}

	}

}

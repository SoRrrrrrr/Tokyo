package ch1;
/*
 * switch(값) {
 * 	case value1: {
 * 		실행문;
 * 		break; // 이 키워드를 만나면 즉시 구문을 벗어남
 * 	}case value2: {
 * 		실행문;
 * 		break;
 * 	}
	default: {
 * 		실행문;
 * 	}
 * }
 */
import java.util.Scanner;

public class Control3 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("숫자를 입력하세요: ");
		int day = sc.nextInt();
		String result ;
		switch (day) {
			case 0:{
				result="일요일";
				break;
			}
			case 1:{
				result="월요일";
				break;
			}
			case 2:{
				result="화요일";
				break;
			}
			case 3:{
				result="수요일";
				break;
			}
			case 4:{
				result="목요일";
				break;
			}
			case 5:{
				result="금요일";
				break;
			}
			case 6:{
				result="토요일";
				break;
			}
			default:{
				System.out.println("정해진 숫자만 입력하세요.");
			}
			System.out.println("오늘은", result, "요일입니다.");
		}

	}

}

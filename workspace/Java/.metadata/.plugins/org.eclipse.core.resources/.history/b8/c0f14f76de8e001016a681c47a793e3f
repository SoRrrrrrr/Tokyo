package ch1;

import java.util.Scanner;

public class Hw_0911 {

	public static void main(String[] args) {
		//Q1
		String password = "qwer1234";
		if(password.equals("qwer1234")) {
			System.out.println("비밀번호가 맞아요!");
		}else {
			System.out.println("비밀번호가 틀렸어요!");
		}
		System.out.println("======================");
		//Q2
		Scanner sc = new Scanner(System.in);
		System.out.println("비밀번호를 입력하세요: ");
		String pw = sc.next();
		if(pw.equals("qwer1234")) {
			System.out.println("비밀번호가 맞아요!");
		}else {
			System.out.println("비밀번호가 틀렸어요!");
		}
		System.out.println("======================");
		//Q3
		String animal = "강아지";
		if(animal.equals("강아지")) {
			System.out.println("멍멍!");
		}else if(animal.equals("고양이")){
			System.out.println("야옹!");
		}else {
			System.out.println("무슨 동물이야 ?");
		}
		System.out.println("======================");
		//Q4
		System.out.println("동물을 입력하세요: ");
		String animal2 = sc.next();
		if(animal2.equals("강아지")) {
			System.out.println("멍멍!");
		}else if(animal2.equals("고양이")){
			System.out.println("야옹!");
		}else {
			System.out.println("무슨 동물이야 ?");
		}
		System.out.println("======================");
		//Q5
		int day = 6;
		if(day==6 || day==0) {
			System.out.println("주말이야!");
		}else {
			System.out.println("평일이야!");
		}
		System.out.println("======================");
		//Q6
		System.out.println("0-6 중 숫자를 입력하세요: ");
		int day2 = sc.nextInt();
		if(day2==6 || day2==0) {
			System.out.println("주말이야!");
		}else {
			System.out.println("평일이야!");
		}
		System.out.println("======================");
		//Q7
		System.out.println("나이를 입력하세요: ");
		int age = sc.nextInt();
		if(age>=19) System.out.println("성인입니다.");
		else if(age<19 && age >0) System.out.println("미성년입니다.");
		else System.out.println("나이를 제대로 입력하세요.");
	}

}
